.spacer {
  min-height: 1px;
}

.top-nav {
  margin-bottom: 20px;
}

.centerpiece, .copy_line {
  text-align: center;
}

.centerpiece {
  font-family: RockSalt;
  margin-top: 20px;
  margin-bottom: 20px;
}

.centerpiece_copy {
  clear:both;
  height:100%;
  overflow:auto;
  margin-bottom: 20px;
}

.nav-border {
  border-right-style: solid;
  border-width: 2px;
}

.nav-side {
