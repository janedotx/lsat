}

.feature, .copy_line {
  margin-bottom: 20px;
}

.feature {
  height: 300px;
  background-color: black;
  color: white;
  padding: 10px;
}

.feature h1, h2, h3, h4 {
  text-align: center;
}

@font-face {
  font-family: 'RockSalt';
