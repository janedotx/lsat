}

a {
  text-decoration: none;
}

.nav-side a {
  color: #a1453a;
}

.nav-side a:visited {
  color: #a1453a;
}

a:visited {
  color: #a1453a;

}

.nav-side a:hover {
  color: #a1453a;
}

.white_border {
  border-style: solid;
  border-width: 2px;
}

.ellens_face {
  color: #F0EBE6;
