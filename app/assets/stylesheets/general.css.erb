body {
  /*background-color: #a1453a;
  */
}

body .container_12 {
  height: 100%;
  padding: 15px;
  /*color: #F0EBE6;*/
}

.spacer {
  min-height: 1px;
}

.centerpiece, .copy_line {
  text-align: center;
}

.centerpiece {
  font-family: RockSalt;
  margin-top: 20px;
  margin-bottom: 20px;
}

.centerpiece_copy {
  clear:both;
  height:100%;
  overflow:auto;
  margin-bottom: 20px;
}

/* nav-stuff */
.top_nav {
  margin-top: 70px;
  margin-bottom: 20px;
}

.top_nav ul {
  display: inline;
}

.nav_border {
  border-right-style: solid;
  border-width: 2px;
}

.nav-list li {
  display: inline;
  color: #a1453a;
  list-style-type:none;
  padding-right: 20px;
  padding-left: 20px;
  padding-top: 10px;
  padding-bottom: 10px;
}

.nav_left li {
  float: left;
}

.nav_right li {
  float: right;
}

a {
  text-decoration: none;
}

.nav-side a {
  color: #a1453a;
}

.nav-side a:visited {
  color: #a1453a;
}

a:visited {
  color: #a1453a;

}

.nav-side a:hover {
  color: #a1453a;
}

.white_border {
  border-style: solid;
  border-width: 2px;
}

.ellens_face {
  color: #F0EBE6;
  /*
  height: 460px;
  */
}

.ellens_face {

}

.feature, .copy_line {
  margin-bottom: 20px;
}

.feature {
  height: 300px;
  background-color: black;
  color: white;
  padding: 10px;
}

.feature h1, h2, h3, h4 {
  text-align: center;
}

@font-face {
  font-family: 'RockSalt';
  src: local('RockSalt'), url(<%= asset_path('RockSalt.ttf') %>);
}

.hidden {
  visibility: hidden;
}
